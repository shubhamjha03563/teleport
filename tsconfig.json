{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext", // ← ✅ change this
    "moduleResolution": "Bundler", // ← ✅ ESM-style module resolution
    "lib": ["ES2021"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@teleport/common": ["packages/common/src"]
    },
    "composite": true
  },
  "references": [
    {
      "path": "packages/common"
    },
    {
      "path": "services/auth-service"
    }
  ],
  "exclude": ["node_modules"]
}
